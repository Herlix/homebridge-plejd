{
    "private": false,
    "displayName": "Plejd",
    "name": "homebridge-plejd",
    "author": "Herlix",
    "version": "1.7.9",
    "description": "HomeKit support for the Plejd BLE platform using Homebridge",
    "license": "Apache-2.0",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git@github.com:Herlix/homebridge-plejd.git"
    },
    "bugs": {
        "url": "https://github.com/Herlix/homebridge-plejd/issues"
    },
    "engines": {
        "node": "^18 || ^20 || ^22 || ^24",
        "homebridge": "^1.8.0 || ^2.0.0-beta.0"
    },
    "main": "dist/index.js",
    "scripts": {
        "lint": "eslint src/**.ts --max-warnings=0",
        "dev": "npm run build && npm link && nodemon",
        "build": "rimraf ./dist && tsc",
        "prepublishOnly": "npm run lint && npm run build",
        "test": "jest ./**/*.spec.* --detectOpenHandles --forceExit --silent=false",
        "test:watch": "jest ./**/*.spec.* --detectOpenHandles --forceExit --silent=false --watch"
    },
    "keywords": [
        "homebridge-plugin",
        "plejd"
    ],
    "dependencies": {
        "@abandonware/noble": "^1.9.2-26"
    },
    "devDependencies": {
        "@eslint/js": "^9.9.0",
        "@types/eslint": "^9.6.0",
        "@types/jest": "^29.5.14",
        "@types/noble": "^0.0.44",
        "@types/node": "^22.2.0",
        "@typescript-eslint/eslint-plugin": "^8.1.0",
        "@typescript-eslint/parser": "^8.1.0",
        "eslint": "^9.9.0",
        "eslint-config-prettier": "^9.1.0",
        "globals": "^15.9.0",
        "homebridge": "^1.8.4",
        "jest": "^29.7.0",
        "nodemon": "^3.1.4",
        "rimraf": "^6.0.1",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.5.4",
        "typescript-eslint": "^8.1.0"
    }
}
