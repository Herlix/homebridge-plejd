{
  "private": false,
  "displayName": "Plejd",
  "name": "homebridge-plejd",
  "author": "Alexander Herlin",
  "version": "1.3.4",
  "description": "HomeKit support for the Plejd BLE platform using Homebridge",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:Herlix/homebridge-plejd.git"
  },
  "bugs": {
    "url": "https://github.com/Herlix/homebridge-plejd/issues"
  },
  "engines": {
    "node": ">=20.0.0",
    "homebridge": ">=1.6.0"
  },
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**.ts --max-warnings=0",
    "devCommand": "npm run buildPlejd && npx tsc && npx homebridge -I -D",
    "dev": "npm run build && npm link && nodemon -e js,ts,rs --watch plejd-api/src --watch src --exec \"npm run devCommand\"",
    "link": "npm run build && npm link",
    "grabAssets": "mkdir -p ./dist/plejd_api && cp ./plejd-api/pkg/* ./dist/plejd_api",
    "buildPlejd": "cd plejd-api && wasm-pack build --target nodejs && cd .. && npm run grabAssets",
    "build": "rimraf ./dist && npm run buildPlejd && tsc",
    "prepublishOnly": "npm run lint && npm run build",
    "test": "jest --detectOpenHandles --forceExit --silent=false",
    "test:e2e": "find ./tests -name *e2e-spec.ts -exec jest --config ./tests/jest-e2e.json -- {} \\;"
  },
  "keywords": [
    "homebridge-plugin",
    "plejd"
  ],
  "dependencies": {
    "@abandonware/noble": "^1.9.2-15",
    "dotenv": "^16.3.1",
    "events": "^3.3",
    "lodash": "^4.17",
    "node-fetch": "^2.7.0",
    "plejd-api": "file:plejd-api/pkg",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/noble": "^0.0.42",
    "@types/node": "^18.16.20",
    "@types/node-fetch": "^2.6.6",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "homebridge": "^1.6.0",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}